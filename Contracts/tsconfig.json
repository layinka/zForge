{
    "compilerOptions": {
      "target": "es2022",
      "module": "node16",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "declaration": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["./types"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "files": ["./hardhat.config.cts"],
    "ts-node": {
      "experimentalResolver": true,
      "files": true // only if you have "files", "include" or "exclude" in your config
    }
  }
  